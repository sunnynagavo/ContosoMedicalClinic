@page "/admin/staff"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject IStaffService StaffSvc
@rendermode InteractiveServer

<PageTitle>Staff Roster - Contoso Medical Clinic</PageTitle>

<div class="page-content">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title mb-0"><i class="bi bi-person-badge me-2"></i>Staff Roster</h2>
        </div>

        @if (_staff is null)
        {
            <div class="loading-spinner"><div class="spinner-border text-primary"></div></div>
        }
        else if (_staff.Count == 0)
        {
            <div class="alert alert-info">No staff members found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-clinic table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Specialization</th>
                            <th>Hire Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in _staff)
                        {
                            <tr>
                                <td>@s.StaffId</td>
                                <td class="fw-bold">@s.FirstName @s.LastName</td>
                                <td>@s.Email</td>
                                <td><span class="badge bg-primary">@s.Role</span></td>
                                <td>@s.Specialization</td>
                                <td>@s.HireDate</td>
                                <td>
                                    @if (s.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<StaffDto>? _staff;

    protected override async Task OnInitializedAsync()
    {
        try { _staff = await StaffSvc.GetStaffAsync(); }
        catch { _staff = []; }
    }
}
