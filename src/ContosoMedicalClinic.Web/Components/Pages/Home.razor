@page "/"

<PageTitle>Contoso Medical Clinic</PageTitle>

<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">Your Health, Our Priority</h1>
        <p class="lead mb-4">Comprehensive medical care for the whole family — from general checkups to specialized treatments.</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/patient/appointments/book" class="btn btn-light btn-lg px-4">
                <i class="bi bi-calendar-plus me-2"></i>Book Appointment
            </a>
            <a href="/services" class="btn btn-outline-light btn-lg px-4">
                <i class="bi bi-clipboard2-pulse me-2"></i>Our Services
            </a>
        </div>
    </div>
</section>

<!-- Quick Stats -->
<section class="py-5">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <div class="card p-4">
                    <div class="card-icon mb-2"><i class="bi bi-people-fill"></i></div>
                    <h3 class="fw-bold text-primary">5+</h3>
                    <p class="text-muted mb-0">Expert Providers</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-4">
                    <div class="card-icon mb-2"><i class="bi bi-clipboard2-pulse-fill"></i></div>
                    <h3 class="fw-bold text-primary">30+</h3>
                    <p class="text-muted mb-0">Medical Services</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-4">
                    <div class="card-icon mb-2"><i class="bi bi-hospital-fill"></i></div>
                    <h3 class="fw-bold text-primary">7</h3>
                    <p class="text-muted mb-0">Specialties</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-4">
                    <div class="card-icon mb-2"><i class="bi bi-clock-fill"></i></div>
                    <h3 class="fw-bold text-primary">24/7</h3>
                    <p class="text-muted mb-0">Online Booking</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Service Categories -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="section-title mb-4">Our Specialties</h2>
        <div class="row g-4 mt-2">
            @foreach (var specialty in _specialties)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card p-4 text-center h-100">
                        <div class="service-icon mx-auto mb-3">
                            <i class="bi @specialty.Icon"></i>
                        </div>
                        <h5 class="fw-bold">@specialty.Name</h5>
                        <p class="text-muted small mb-0">@specialty.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5" style="background: linear-gradient(135deg, #0D7377 0%, #4ECDC4 100%);">
    <div class="container text-center text-white">
        <h2 class="fw-bold mb-3">Ready to Take Charge of Your Health?</h2>
        <p class="lead mb-4 opacity-75">Schedule your appointment today and experience quality healthcare.</p>
        <a href="/patient/appointments/book" class="btn btn-light btn-lg px-5">
            <i class="bi bi-calendar-check me-2"></i>Schedule Now
        </a>
    </div>
</section>

@code {
    private record SpecialtyInfo(string Name, string Icon, string Description);

    private readonly List<SpecialtyInfo> _specialties =
    [
        new("General Medicine", "bi-heart-pulse", "Comprehensive primary care and checkups"),
        new("Dental", "bi-emoji-smile", "Complete dental care and oral health"),
        new("Cardiology", "bi-activity", "Heart health and cardiovascular care"),
        new("Dermatology", "bi-shield-plus", "Skin care and dermatological treatments"),
        new("Orthopedics", "bi-bandaid", "Bone, joint, and muscle care"),
        new("Pediatrics", "bi-balloon", "Specialized care for children"),
        new("Laboratory", "bi-droplet", "Diagnostics and lab testing"),
    ];
}
